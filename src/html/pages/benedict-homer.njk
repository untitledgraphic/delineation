{% import "macros/_projects.njk" as project %} 

<!-- vars -->
{% set Title = "Benedict Homer" %}
{% set SubTitle = "Designer-maker branding & website" %}

{% extends "_layout.njk" %}
{% block content %}

<main id="main" class="project">
    
    {% include "partials/_me.njk" ignore missing %} 
    
    {# Project title | Subtitle | Hero image | Hero image alt | Date | roles #}  
    {{ project.hero(
        Title,                              
        SubTitle,     
        'feature-benedict-homer.jpg',                        
        'Apple scuplture by Benedict Homer',
        '2011 to present',                  
        ['Design', 'Branding', 'UX', 'Development', 'Photography']
    )}}

    {# Project title | Subtitle | text | image | image alt text #}
    {{ project.intro (
        Title,
        SubTitle,
        '<p>Write some text in here. <a href="" >You can</a> also use <em>italics</em>, and <strong>bold</strong> text. Woo hoo!</p>',
        'https://unsplash.it/220',
        'The alt text'
    )}}
    
    {{ project.imageSquare (
        'ben-homer-logo.svg',
        'Logo design for Ben Homer',
        ''
    )}}
    
    {{ project.imageSplit (
        'ben-homer-upgrade.jpg',
        'Happy-sad wine bottle stopper with stand',
        'A series of postcards were produced for Ben as business cards. Each featured a different piece of work.',
        ''
    )}}
    
    {{ project.thumbnails (
        [
            ['ben-homer-postcard-2.jpg', 'a cover page'],
            ['ben-homer-postcard-4.jpg', 'a cover page'],
            ['ben-homer-postcard-8.jpg', 'a cover page']
        ]
    )}}
    
    {{ project.thumbnails (
        [
            ['ben-homer-postcard-12.jpg', 'a cover page'],
            ['ben-homer-postcard-11.jpg', 'a cover page'],
            ['ben-homer-postcard-13.jpg', 'a cover page']
        ]
    )}}
    
    {{ project.imageFull (
        'ben-homer-website-desktop.jpg',
        'Desktop website designs',
        'image__container--contain'
    )}}
    
    {{ project.imageFull (
        'ben-homer-website-mobile.jpg',
        'Desktop responsive website designs',
        'image__container--contain'
    )}}
    
</main>

{# Class | Preview image alt | Next project | Previous project | Previous project URL #}
{{ project.preview(
    'meadow-arts',                              
    'meadow arts image thing',                  
    'Meadow Arts',
    'Nik Burns',                       
    'nik-burns.html'
)}}

{% endblock %}